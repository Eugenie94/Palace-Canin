{% extends 'base.html.twig' %}

{% block title %}Palace Canin | Inscription{% endblock %}

{% block css %}

    <link rel="stylesheet" href="{{ asset('assets/css/register.css') }}">

{% endblock %}



{% block body %}
    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">Enregistrez-vous</h1>

        <div class="barre-doree"></div>


    </div>

    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-10 mx-auto">
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}

                            {{ form_row(form.firstname) }}
                            {{ form_row(form.lastname) }}
                            {{ form_row(form.dog_name) }}
                            {{ form_row(form.address) }}
                            {{ form_row(form.city) }}


                        </div>

                        <div class="col-md-6">

                            {{ form_row(form.zipcode) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.password) }}
                            {{ form_row(form.telephone) }}
                            {{ form_row(form.submit) }}

                            {{ form_end(form) }}

                        </div>



                    </div>
                </div>
            </div>
        </div>
    </div>




{% endblock %}
