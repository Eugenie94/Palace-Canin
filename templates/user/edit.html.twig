{% extends 'base.html.twig' %}

{% block title %}Palace Canin | Modification profil{% endblock %}


{% block css %}

    <link rel="stylesheet" href="{{ asset('assets/css/edit.css') }}">

{% endblock %}

{% block body %}
    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">Modifiez vos informations</h1>

        <div class="barre-doree"></div>


    </div>

    <div class="py-5">
        <div class="container">
            <div class="row">
                <div class="col-10 mx-auto">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-6">

                            {{ form_row(form.firstname) }}
                            {{ form_row(form.lastname) }}
                            {{ form_row(form.email) }}
                            {{ form_row(form.password) }}


                        </div>

                        <div class="col-md-6">

                            {{ form_row(form.address) }}
                            {{ form_row(form.city) }}
                            {{ form_row(form.zipcode) }}
                            {{ form_row(form.telephone) }}


                        </div>


                        <div class="row">

                            <div class="col-md-12">
                                {{ form_row(form.dog_name) }}
                            </div>

                        </div>


                        <div class="row">

                            <div class="col-md-12">
                            {{ form_row(form.submit) }}
                            </div>

                        </div>


                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>




{% endblock %}
